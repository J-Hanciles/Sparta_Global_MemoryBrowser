<Window x:Class="WPFBrowserApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBrowserApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="combo1" HorizontalAlignment="Left" Margin="60,31,0,0" VerticalAlignment="Top" Width="682" SelectionChanged="ComboBox_SelectionChanged" IsEditable="True" IsTextSearchEnabled="False" KeyDown="OnKeyPress" SelectedIndex="0">
            
        </ComboBox>
        <WebBrowser x:Name="brwControl" HorizontalAlignment="Left" Height="314" Margin="60,74,0,0" VerticalAlignment="Top" Width="682">
            <WebBrowser.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF971E1E" Offset="1"/>
                </LinearGradientBrush>
            </WebBrowser.OpacityMask>
        </WebBrowser>
    </Grid>
</Window>
